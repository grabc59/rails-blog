<%= render 'shared/errors', obj: @article %>

<%= form_for(@article, :html => {role: "form"}) do |f| %>
    <div class="form-group row">
        <div class="col-sm-2">
            <%= f.label :title, class: "col-form-label"%>
        </div>
        <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control", id: "articleTitle", placeholder: "Title of article", autofocus: true %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <%= f.label :description, class: "col-form-label"%>
        </div>
        <div class="col-sm-10">
            <%= f.text_area :description, class: "form-control", id:"articleBody", placeholder: "Body of article", rows: 10 %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10 offset-2">
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <%= f.submit "Submit", :class => "btn btn-outline-primary" %>
                    <%= link_to "Cancel", articles_path, :class => "btn btn-outline-danger" %>
                </div>
            </div>
        </div>
    </div>
<% end %>