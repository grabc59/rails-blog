<% if @article.errors.any? %>
    <h2>The following errors prevented the article from being saved.</h2>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for(@article, :html => {role: "form"}) do |f| %>
    <div class="form-group row">
        <div class="col-sm-2">
            <%= f.label :title, class: "col-form-label"%>
        </div>
        <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control", id: "articleTitle", placeholder: "Title of article", autofocus: true %>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <%= f.text_area :description, class: "form-control", id:"articleBody", placeholder: "Body of article", rows: 10 %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10 offset-2">
            <%= f.submit "Submit", :class => "btn btn-primary btn-lg " %>
            <%= link_to "Cancel", articles_path, :class => "btn btn-secondary btn-lg " %>
        </div>
    </div>
<% end %>