<% if @article.errors.any? %>
    <h2>The following errors prevented the article from being saved.</h2>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<div class="row">
    <div class="col-sm-9 offset-3">
        <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :title %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :description %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_area :description, :class => "form-control", placeholder: "Body of article", rows: 10 %>
                </div>
                <div class="form-group">
                    <div class=" col-sm-8">
                        <br/>
                        <%= f.submit "Create", :class => "btn btn-primary btn-lg btn-block" %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    <div class="col-xs-4 offset-5">
        [ <%= link_to "Cancel request and return to articles", articles_path %> ]
    </div>
</div>
