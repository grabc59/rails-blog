<%= render "pages/header" %>

<main role="main">

    <section class="jumbotron text-center">
        <div class="container">
        <h1 class="jumbotron-heading">Articles</h1>
        <p class="lead text-muted">Something short and leading about the collection belowâ€”its contents, the creator, etc. Make it short and sweet, but not too short so folks don't simply skip over it entirely.</p>
        <p>
            <%= link_to new_article_path do %>
                <button type="button" class="btn btn-primary my-2">
                    Create Article
                </button>
            <% end %>
            <a href="#" class="btn btn-secondary my-2">Secondary action</a>
        </p>
        </div>
    </section>

    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                <% @articles.each do |article| %>
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <%= image_tag(article.image, :alt => "rss feed", :class => "card-img-top")%>
                            <div class="card-body">
                            <p><%= article.title %></p>
                            <p class="card-text"><%= article.description %></p>
                                <div class="d-flex justify-content-between align-items-center">
                                    
                                    <div class="btn-group">

                                        <%= link_to article_path(article) do %>
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Show</button>
                                        <% end %>

                                        <%= link_to edit_article_path(article) do %>
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                                        <% end %>

                                        <%= link_to article_path(article), method: :delete, data: {confirm: "Are you sure?"} do %>
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Delete</button>
                                        <% end %>
                                    </div>
                                    
                                    <small class="text-muted">9 mins</small>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</main>

<%= render 'pages/footer' %>