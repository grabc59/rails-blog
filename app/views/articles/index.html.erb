<div class="card-columns">
    <% @articles.each do |article| %>
            <div class="card">
                <%= link_to(article_path(article))  do %>
                <%= image_tag(article.image, :alt => "article image", :class => "card-img-top")%>
                <% end %>
                <div class="card-body">
                    <h3 class="card-title"><%= article.title %></h3>
                    <hr>
                    <div class="article-meta-details">
                        <small class="text-muted">
                            By: <%= article.user.username if article.user %>,
                            <%= time_ago_in_words(article.created_at) %> ago, 
                            last updated: <%= time_ago_in_words(article.created_at) %> ago
                        </small>
                    </div>
                    <p class="card-text"><%= article.description %></p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <%= link_to "Edit", edit_article_path(article), class: "btn btn-sm btn-outline-primary" %>
                            <%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-outline-danger" %>
                        </div>
                    </div>
                </div>
            </div>
    <% end %>
</div>