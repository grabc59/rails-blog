<div class="card mb-3">
  <%= image_tag(@article.image, :alt => "article image", :class => "card-img-top")%>
  <div class="card-body">
    <div class=" d-flex align-items-center flex-column">
        <h1 class="card-title"><%= @article.title %></h1>
        <% if @article.user %>
            <h4>Created by:</h4>
            <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
            <%= link_to @article.user.username, user_path(@article.user) %>
            <small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small>
        <% end %>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <%= link_to "Edit", edit_article_path(@article), class: "btn btn-sm btn-outline-primary" %>
                <%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-outline-danger" %>
            </div>
        </div>
    </div>
    <hr>
    <div class="article-meta-details">
        <small class="text-muted">
            By: <%= @article.user.username if @article.user %>,
            <%= time_ago_in_words(@article.created_at) %> ago, 
            last updated: <%= time_ago_in_words(@article.created_at) %> ago
        </small>
    </div>
    
    <p class="card-text"><%= simple_format(@article.description) %></p>
</p>
  </div>
</div>